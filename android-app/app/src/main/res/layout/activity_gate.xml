<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GateActivity">

    <TableLayout
        android:id="@+id/gateTable"
        android:layout_width="360dp"
        android:layout_height="700dp"
        android:stretchColumns="0,1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0089DD97"
            android:layout_margin="0.9dip"
            android:gravity="center">

            <ImageButton
                android:id="@+id/localButton"
                android:layout_width="0dp"
                android:background="#7AFBE9A8"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mummy" />

            <ImageButton
                android:id="@+id/internetButton"
                android:layout_width="0dp"
                android:background="#7AA8F4FB"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_web_src" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="本地资源"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="全网资源"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/crawlerButton"
                android:layout_width="0dp"
                android:background="#7AFBA8A8"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_robot" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="在线资源"
                android:textSize="18dp" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>